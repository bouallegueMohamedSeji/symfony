{% if author is defined and author is not null %}
    <h1>Détails de : {{ author.username }}</h1>
    
    <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="200">
    
    <p><strong>Email :</strong> {{ author.email }}</p>
    <p><strong>Nombre de livres :</strong> {{ author.nb_books }}</p>

{% else %}
    <h1>Auteur non trouvé.</h1>
{% endif %}

<br>
<a href="{{ path('app_author_list') }}">Retour à la liste</a>